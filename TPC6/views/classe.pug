extends layout

block content
      if list.length > 0
        .w3-container.w3-padding-8
          .w3-container.w3-pale-blue.w3-center.w3-mobile
            h2.w3-center Lista de Classes Nível 1
          ul.w3-ul.w3-card-4
            each c in list
              li.w3-bar.w3-hover-gray
                a(href='classe/:id'+c.id)
                  .w3-bar-item
                    span(class="w3-large")= c.titulo
                    br
                    span
                      b código:
                    span= c.codigo
      else
        .w3-container
          p Não existem classes