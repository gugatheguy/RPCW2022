doctype html
html
  head
    title Música #{musica.id}
    link(rel='stylesheet', href='/stylesheets/w3.css')
    link(rel='icon', href='/images/favicon.png')
  body
    div(class="w3-container w3-padding-8 w3-center w3-mobile")
      div(class="w3-container w3-pale-blue w3-center w3-mobile")
        h1 Música #{musica.id}
      br
      p
        b Identificador :
        span= musica.id
      p
        b Título :
        span= musica.tit
      p
        b Província :
        a(href='/musicas/prov/'+musica.prov)= musica.prov
      p
        b Local :
        span= musica.local
      p
        b Músico :
        span= musica.musico
      p
        b Duracao :
        span= musica.duracao

      p
        a(href= '/musicas' class="w3-button w3-pale-blue w3-hover-gray w3-round-large") Voltar


    
